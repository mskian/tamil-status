{
    "extends": [
      "config:base"
    ],
    "automerge": true,
    "major": {
      "automerge": false
    },
    "lockFileMaintenance": {
      "enabled": false,
      "automerge": false
    },
    "ignoreDeps": [
        "gatsby-source-ghost",
        "gatsby-plugin-advanced-sitemap"
    ],
    "ignorePaths": [
      "plugins/gatsby-plugin-ghost-manifest"
    ],
    "packageRules": [
      {
        "packagePatterns": ["^eslint"],
        "groupName": "eslint"
      },
      {
        "packagePatterns": ["gatsby"],
        "groupName": "gatsby"
      },
      {
        "packagePatterns": ["@tryghost"],
        "groupName": "@tryghost"
      },
      {
        "packageNames": ["react", "react-dom"],
        "groupName": "react"
      }
    ],
    "labels": ["renovate"],
    "prHourlyLimit": 4,
    "prConcurrentLimit": 15,
    "rangeStrategy": "bump",
    "bumpVersion": null,
    "semanticCommits": true,
    "schedule": "before 8am on Monday"
  }
